<%-include ('header') -%>

    <div class="container m-5 "></div>

    <div class="container p-5">
        <h3 class="col-3 mb-4 text-center"><%- car.name %></h3>
        <div class="row d-flex align-items-center">
            <div class="col-6 d-flex justify-content-around">
                <img class="shadow-lg rounded-1" style="max-height: 500px;" src="<%=`/public/car-images/${car._id}.jpg`%>" alt="">
            </div>
            <div class="col-6">
                <div class="row d-flex  justify-content-around align-items-center">
                    <div  class="col-4">
                        <div class="card card-border">
                            <div class="card-body  shadow rounded-3">
                                <h4 class="text-center">Engine</h4>
                                <p class="text-center"><%- car.engine %> cc</p>
                            </div>
                          </div>
                    </div>
                    <div  class="col-4">
                        <div class="card card-border">
                            <div class="card-body shadow rounded-3">
                                <h4 class="text-center">BHP</h4>
                                <p class="text-center"><%- car.power %></p>
                            </div>
                          </div>
                    </div>
                    <div  class="col-4">
                        <div class="card card-border" >
                            <div class="card-body  card-border shadow rounded-3">
                                <h4 class="text-center">Transmission</h4>
                                <p class="text-center"><%- car.transmission %></p>
                            </div>
                          </div>
                    </div>
                    
                </div>

                <div class="row mt-5 d-flex justify-content-around align-items-center">
                    <div  class="col-4">
                        <div class="card card-border">
                            <div class="card-body  shadow rounded-3">
                                <h4 class="text-center">Mileage</h4>
                                <p class="text-center"><%- car.milage %></p>
                            </div>
                          </div>
                    </div>
                    <div  class="col-4">
                        <div class="card card-border">
                            <div class="card-body  shadow rounded-3">
                                <h4 class="text-center">Fuel</h4>
                                <p class="text-center"><%- car.fueltype %></p>
                            </div>
                          </div>
                    </div>
                    <div  class="col-4">
                        <div class="card card-border"> 
                            <div class="card-body  shadow rounded-3">
                                <h4 class="text-center">Airbags</h4>
                                <p class="text-center">yes</p>
                            </div>
                          </div>
                    </div>
                    
                </div>
                
            </div>
        </div>
        
    </div>

    <div class="container mt-5">
        
        <div class="shadow p-3 mb-5">
            <div class="m-5 ">
                <h4 class="text-center">Specification of <%- car.name %></h4>
            </div>
            <div class="p-3">
                <div class="row d-flex justify-content-around">
                    <div class="col-4 ">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Mileage</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.milage %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>

                    <div class="col-4 ">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Fuel Type</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.fueltype %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>
                </div>

                <div class="row mt-5 d-flex justify-content-around">
                    <div class="col-4 ">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>No.Cylinder</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.cylinders %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>

                    <div class="col-4">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Max Power (bhp@rpm)</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.power %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>
                </div>

                <div class="row mt-5 d-flex justify-content-around">
                    <div class="col-4 ">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Max Torque (nm@rpm)</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.torque %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>

                    <div class="col-4">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>TransmissionType</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.transmission %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>
                </div>

                <div class="row mt-5 d-flex justify-content-around">
                    <div class="col-4 ">
                        <div class="row d-flex justify-content-around">
                            <div class="col-6">
                                <p>Seating Capacity</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.seatcapacity %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>

                    <div class="col-4">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Boot Space (Litres)</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.bootspace %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>
                </div>

                <div class="row mt-5 d-flex justify-content-around">
                    <div class="col-4 ">
                        <div class="row d-flex justify-content-around">
                            <div class="col-6">
                                <p>Body Type</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.type %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>

                    <div class="col-4">
                        <div class="row d-flex justify-between">
                            <div class="col-6">
                                <p>Service Cost (Avg. of 5 years)</p>
                            </div>
                            <div class="col-6">
                                <p><%- car.servicecost %></p>
                            </div>
                        </div>
                        <div class="card"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container m-5">
        
    </div>



