<%-include ('partials/header') -%>
<div class="container">

  <form action="/admin/add-employee" method="post">

    <h2 class="text-center">Employee Registration</h2>
        <label for="">Name</label>
        <input type="text"  name="name" placeholder="Employee Name" class="form-control">
        <br>
        <label for="">Phone</label>
        <input type="text" name="phone" placeholder="Employee Phone" class="form-control">
        <br>
        <label for="">Email</label>
        <input type="text" name="email" placeholder="Employee Email" class="form-control">
        <br>
        <label for="">Gender</label><br><br>


        <div class="row">
          <div class="col-2">
           <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" value="Male">
              <label class="form-check-label" for="flexRadioDefault1">
                Male
              </label>
            </div>
          </div>
          <div class="col-2">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gender" value="Female">
              <label class="form-check-label" for="flexRadioDefault2">
                Female
              </label>
            </div>
          </div>  
        </div>

        <br>
        <label for="">Password</label>
        <input type="text" name="password" placeholder="Employee Email" class="form-control">
        <br>
    
    
    <button class="btn btn-success" type="submit">submit</button>
  </form>
</div>