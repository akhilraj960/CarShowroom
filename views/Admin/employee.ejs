<%-include ('partials/header') -%>

<div class="mt-5">

<div class="container mt-5">
    <a class="btn btn-success" href="/admin/add-employee">Create New Employee</a>
    <table class="table table-dark text-center mt-5 table-striped-columns">
        <thead >
            <tr>
              <th scope="col">NO</th>
              <th scope="col">Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Email</th>
              <th scope="col">Phone</th>
              <th scope="col">ID Proof</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% for( var i = 0;i<employees.length;i++){%>
              <tr>
                <th scope="row"><%- i+1%></th>
                <td><%- employees[i].name %></td>
                <td><%- employees[i].gender %></td>
                <td><%- employees[i].phone %></td>
                <td><%- employees[i].email %></td>
                <td>
                <img width="150px" src="" alt="">
                </td>
                <td>
                  <a class="btn btn-primary" href="edit-employee/<%- employees[i]._id%>">Edit</a>
                  <a class="btn btn-danger" href="employee/<%- employees[i]._id%>">Delete</a>
                </td>
              </tr>
              <%}%>
            
            </tbody>
          </tbody>
      </table>
</div>
</div>

