<div class="container mt-5 bg-dark">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-dark text-white" style="width: 18rem;">
               
                <div class="card-body">
                    <h3 class="text-center">Users</h3>
                    <h1 class="text-center">51</h1>
                </div>
              </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark text-white" style="width: 18rem;">
               
                <div class="card-body">
                    <h3 class="text-center">Employe</h3>
                    <h1 class="text-center">8</h1>
                </div>
              </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark text-white" style="width: 18rem;">
                
                <div class="card-body">
