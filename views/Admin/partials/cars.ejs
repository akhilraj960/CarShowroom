<div class="container mt-5">

    <a class="btn btn-success" href="/admin/add">Add New Car</a>
    <div class="row">
        <% for(var i = 0;i<CarData.length;i++){%>
          <div class="col-md-3 mt-5 mb-5">
              <div class="card" style="width: 18rem;">
                <img width="175px" height="200px" src="<%=`/public/car-images/${CarData[i]._id}.jpg`%>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= CarData[i].name %></h5>
                    <p class="card-text">Color : <%= CarData[i].color %></p>
                    <p class="card-text"><%= CarData[i].description %></p>
                    <p class="card-text">Exshowroom price : <%= CarData[i].price %></p>
                    <a href="/admin/edit-car/<%= CarData[i]._id %>" class="btn btn-primary">Edit</a>
                    <a class="btn btn-danger" href="/admin/delete/<%= CarData[i]._id %>">Delete</a>
                  </div>
                </div>
          </div>
          <%}%>
      </div>
</div>
